@model WebSite.Areas.Admin.ViewModels.AlbumViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Manage Albums";
}
<h2>Add an album</h2>

@using(Html.BeginForm("Create", "Album", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <ul>
        <li>
            @Html.LabelFor(m => m.Title)
            @Html.TextBoxFor(m => m.Title)
            @Html.ValidationMessageFor(m => m.Title)
        </li>

        <li>
            @Html.LabelFor(m => m.Duration)
            @Html.TextBoxFor(m => m.Duration)
            @Html.ValidationMessageFor(m => m.Duration)
        </li>
    
        <li>
            @Html.LabelFor(m => m.Type)
            @Html.TextBoxFor(m => m.Type)
            @Html.ValidationMessageFor(m => m.Type)
        </li>

        <li>
            @Html.LabelFor(m => m.ArtistName)
            @Html.TextBoxFor(m => m.ArtistName)
            @Html.ValidationMessageFor(m => m.ArtistName)
        </li>

        <li>
            Cover image : 
            <input type ="file" name ="file" />
        </li>

        
    </ul>
    
    <input type ="submit" value ="Save" />
}